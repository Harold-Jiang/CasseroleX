@model MenuDto
<form id="edit-form" class="form-horizontal form-ajax" role="form" method="POST" action="">
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">Ismenu:</label>
        <div class="col-xs-12 col-sm-8"> 
            <div class="radio">
                <label>
                    @Html.RadioButton("ismenu", true, Model.IsMenu == true, new { id = "ismenu-yes" })Yes
                </label>
                <label>
                    @Html.RadioButton("ismenu", false, Model.IsMenu == false, new { id = "ismenu-no" })No
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">Parent:</label>
        <div class="col-xs-12 col-sm-8">
            @await Component.InvokeAsync("GetMenusSelect",new { dic = new Dictionary<string,string>{ { "name","pid"}}, selected = Model.Pid.ToString()})
        </div>
    </div>
    <div class="form-group">
        <label for="name" class="control-label col-xs-12 col-sm-2">Name:</label>
        <div class="col-xs-12 col-sm-8">
            <input type="text" class="form-control" id="name" name="name" data-placeholder-node="Controller/Action Name" data-placeholder-menu="Parent menu does not need to match controller and method, please use controller name for child menu" value="@Model.Name" data-rule="required" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">Title:</label>
        <div class="col-xs-12 col-sm-8">
            <input type="text" class="form-control" id="title" name="title" value="@Model.Title" data-rule="required" />
        </div>
    </div>
    <div class="form-group" data-type="menu">
        <label class="control-label col-xs-12 col-sm-2">Url:</label>
        <div class="col-xs-12 col-sm-8">
            <input type="text" class="form-control" id="url" name="url" value="@Model.Url" data-rule="" placeholder="Generally, leave blank. If it is an external or relative link, please enter" />
        </div>
    </div>
    <div class="form-group">
        <label for="icon" class="control-label col-xs-12 col-sm-2">Icon:</label>
        <div class="col-xs-12 col-sm-8">
            <div class="input-group input-groupp-md">
                <span class="input-group-addon"><i class="@Model.Icon" id="icon-style"></i></span>
                <input type="text" class="form-control" id="icon" name="icon" value="@Model.Icon" />
                <a href="javascript:;" class="btn-search-icon input-group-addon">Search icon</a>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="condition" class="control-label col-xs-12 col-sm-2">Condition:</label>
        <div class="col-xs-12 col-sm-8">
            <textarea class="form-control" id="condition" name="condition">@Model.Condition</textarea>
        </div>
    </div>
    <div class="form-group" data-type="menu">
        <label for="menutype" class="control-label col-xs-12 col-sm-2">Menutype:</label>
        <div class="col-xs-12 col-sm-8">
            <div class="radio">
                <label>
                    @Html.RadioButton("menutype", "addtabs", Model.MenuType == "addtabs", new { id = "menutype-addtabs" })addtabs
                </label>
                <label>
                    @Html.RadioButton("menutype", "dialog", Model.MenuType == "dialog", new { id = "menutype-dialog" })dialog
                </label>
                <label>
                    @Html.RadioButton("menutype", "ajax", Model.MenuType == "ajax", new { id = "menutype-ajax" })ajax
                </label>
                <label>
                    @Html.RadioButton("menutype", "blank", Model.MenuType =="blank", new { id = "menutype-blank" })blank
                </label>
            </div>
        </div>
    </div>
    <div class="form-group" data-type="menu">
        <label for="extend" class="control-label col-xs-12 col-sm-2">Extend:</label>
        <div class="col-xs-12 col-sm-8">
            <textarea class="form-control" id="extend" name="extend">@Model.Extend</textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="remark" class="control-label col-xs-12 col-sm-2">Remark:</label>
        <div class="col-xs-12 col-sm-8">
            <textarea class="form-control" id="remark" name="remark">@Model.Remark</textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="weigh" class="control-label col-xs-12 col-sm-2">Weigh:</label>
        <div class="col-xs-12 col-sm-8">
            <input type="text" class="form-control" id="weigh" name="weigh" value="@Model.Weigh" data-rule="required" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">Status:</label>
        <div class="col-xs-12 col-sm-8">
            <div class="radio">
                <label>
            @Html.RadioButton("status", "normal", Model.Status == Status.normal, new { id = "status-normal" })Normal
                </label>
                <label>
            @Html.RadioButton("status", "hidden", Model.Status == Status.hidden, new { id = "status-hidden" })Hidden
                </label>
            </div>
        </div>
    </div>
    <div class="form-group hidden layer-footer">
        <div class="col-xs-2"></div>
        <div class="col-xs-12 col-sm-8">
            <button type="submit" class="btn btn-primary btn-embossed disabled">OK</button>
            <button type="reset" class="btn btn-default btn-embossed">Reset</button>
        </div>
    </div>
</form>
<partial name="_Tpl"> 