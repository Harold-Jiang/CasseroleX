<form id="add-form" class="form-horizontal" role="form" data-toggle="validator" method="POST" action="">
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">Ismenu:</label>
        <div class="col-xs-12 col-sm-8">
            <div class="radio">
                <label>
                    @Html.RadioButton("ismenu", true, true, new { id = "ismenu-yes" })Yes
                </label>
                <label>
                    @Html.RadioButton("ismenu", false, false, new { id = "ismenu-no" })No
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">Pid:</label>
        <div class="col-xs-12 col-sm-8"> 
            @await Component.InvokeAsync("GetUserRulesSelect",new { dic = new Dictionary<string,string>{ { "name","pid"}}})
        </div>
    </div>
    <div class="form-group">
        <label for="c-name" class="control-label col-xs-12 col-sm-2">Name:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-name" class="form-control" name="name" type="text" data-placeholder-node="Node tips" data-placeholder-menu="Menu tips">
        </div>
    </div>
    <div class="form-group">
        <label for="c-title" class="control-label col-xs-12 col-sm-2">Title:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-title" class="form-control" name="title" type="text" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="remark" class="control-label col-xs-12 col-sm-2">Remark:</label>
        <div class="col-xs-12 col-sm-8">
            <textarea class="form-control" id="remark" name="remark"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="c-weigh" class="control-label col-xs-12 col-sm-2">Weigh:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-weigh" class="form-control" name="weigh" type="number" value="0">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">Status:</label>
        <div class="col-xs-12 col-sm-8">
            <div class="radio">
                <label>
                    @Html.RadioButton("status", "normal", true, new { id = "status-normal" })normal
                </label>
                <label>
                    @Html.RadioButton("status", "hidden", false, new { id = "status-hidden" })hidden
                </label>
            </div>
        </div>
    </div>
    <div class="form-group layer-footer">
        <label class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button type="submit" class="btn btn-primary btn-embossed disabled">OK</button>
            <button type="reset" class="btn btn-default btn-embossed">Reset</button>
        </div>
    </div>
</form>
